<odoo>
    <data>
         <record model="ir.ui.view" id="ebt_school_assignment_view_form">
            <field name="name">School Assignment</field>
            <field name="model">school.assignment</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="School Structure">
                    <header>

                    </header>
                    <sheet>
                         <group>
                            <group>
                                <field name="school_id" options="{'no_create_edit': True}"/>
                                <field name="employee_id" options="{'no_create_edit': True}"/>
                            </group>
                             <group>
                                 <field name="date_in_service"/>
                                 <field name="position"/>
                             </group>
                        </group>
<!--                        <notebook>-->
<!--                            <page id="child_ids" string="Structures">-->
<!--                                <field name="child_ids" widget="section_and_note_one2many" mode="tree">-->
<!--                                    <tree  string="Structures" default_order="id">-->
<!--                                        <field name="school_name"/>-->
<!--                                    </tree>-->
<!--                                </field>-->
<!--                            </page>-->
<!--                        </notebook>-->
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="ebt_school_assignment_view_tree">
            <field name="name">School Assignment Tree</field>
            <field name="model">school.assignment</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <field name="school_id"/>
                    <field name="date_in_service"/>
                    <field name="position"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="ebt_school_assignment_action">
            <field name="name">School Assignment</field>
            <field name="res_model">school.assignment</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'tree', 'view_id': ref('ebt_school_assignment_view_tree')}),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('ebt_school_assignment_view_form')})
                    ]"/>
            <field name="target">current</field>
            <field name="domain">[]</field>
        </record>

         <record model="ir.actions.act_window" id="ebt_school_structure_assignment_action">
            <field name="name">School Assignment</field>
            <field name="res_model">school.assignment</field>
            <field name="view_mode">tree</field>
            <field name="view_ids" eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'tree', 'view_id': ref('ebt_school_assignment_view_tree')}),
                    ]"/>
            <field name="target">current</field>
            <field name="domain">[('school_id','=',active_id)]</field>
        </record>



    </data>
</odoo>